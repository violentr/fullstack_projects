{
    "editor.tabSize": 2,
    "eslint.validate" : [
        "html",
        "javascript",
        "javascriptreact"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "emmet.triggerExpansionOnTab": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
  }
    
}